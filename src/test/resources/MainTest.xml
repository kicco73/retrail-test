<?xml version="1.0" encoding="UTF-8"?>
<ucon:Config xmlns:ucon="http://security.iit.cnr.it/retrail/ucon">
    <ucon:Behaviour>
        <ucon:States>
            <ucon:State name="INIT" type="BEGIN"/>
            <ucon:State name="TRY" type="STANDARD"/>
            <ucon:State name="ONGOING" type="ONGOING"/>
            <ucon:State name="REVOKED" type="REVOKED"/>
            <ucon:State name="REJECTED" type="END"/>
            <ucon:State name="DELETED" type="END"/>
        </ucon:States>
        <ucon:Actions>
            <ucon:Action name="tryAccess" class="PolicyDrivenAction" source="INIT" target="TRY" failTarget="REJECTED">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="CNR_Test5" RuleCombiningAlgId="urn:oasis:names:tc:xacml:3.0:rule-combining-algorithm:deny-overrides" Version="1.0">
                    <Description>POL-5</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="CNR_Rule5">
                        <Target>
                            <AnyOf>
                                <AllOf>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">Carniani</AttributeValue>
                                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id" Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
                                    </Match>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">VM</AttributeValue>
                                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id" Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
                                    </Match>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">MANAGE</AttributeValue>
                                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id" Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
                                    </Match>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">0</AttributeValue>
                                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:environment:environment-id" Category="urn:oasis:names:tc:xacml:3.0:attribute-category:environment" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
                                    </Match>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">USE</AttributeValue>
                                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id" Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
                                    </Match>
                                </AllOf>
                            </AnyOf>
                        </Target>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="startAccess" class="PolicyDrivenAction" source="TRY" target="ONGOING" failTarget="TRY">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="TRYSTART"
                        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" 
                        Version="1.0">
                    <Description>Default TRYSTART policy</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="TRYSTARTrule">
                        <Target/>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="endAccess" class="PolicyDrivenAction" source="TRY" target="DELETED" failTarget="TRY">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="TRYEND"
                        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" 
                        Version="1.0">
                    <Description>Default TRYEND policy</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="TRYENDrule">
                        <Target/>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="ongoingAccess" class="OngoingAccessAction" source="ONGOING" target="ONGOING" failTarget="REVOKED">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="CNR_Test5" RuleCombiningAlgId="urn:oasis:names:tc:xacml:3.0:rule-combining-algorithm:deny-overrides" Version="1.0">
                    <Description>POL-REVOKE-NOW</Description>
                    <Target/>
                    <Rule Effect="Deny" RuleId="CNR_REVOKE"/>
                </Policy>
            </ucon:Action>
            <ucon:Action name="endAccess" class="PolicyDrivenAction" source="ONGOING" target="DELETED" failTarget="ONGOING">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="POST"
                        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" 
                        Version="1.0">
                    <Description>Default POST policy</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="POSTrule">
                        <Target/>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="endAccess" class="UconAction" source="REVOKED" target="DELETED"/>
        </ucon:Actions>
    </ucon:Behaviour>
</ucon:Config>
